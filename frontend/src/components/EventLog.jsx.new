import React, { useRef, useEffect, useState } from 'react';

/**
 * EventLog - Log decizii √Æn timp real
 *
 * Specifica»õii:
 * - Lista ultimelor 10 decizii ale agen»õilor
 * - Scroll automat
 * - Format: '[12:34:05] Agent B: FR√ÇNEAZƒÇ ‚Äî TTC = 1.8s'
 * - ColoreazƒÉ logul:
 *   - Ro»ôu pentru fr√¢nare
 *   - Galben pentru cedare
 *   - Verde pentru normal
 * - Asta dovede»ôte juriului cƒÉ sistemul ruleazƒÉ live, nu e o anima»õie
 */
const EventLog = ({ events = [], maxEvents = 10 }) => {
  const logEndRef = useRef(null);
  const [autoScroll, setAutoScroll] = useState(true);

  // Scroll automat la ultimul eveniment
  useEffect(() => {
    if (autoScroll && logEndRef.current) {
      logEndRef.current.scrollIntoView({ behavior: 'smooth' });
    }
  }, [events, autoScroll]);

  // PƒÉstreazƒÉ doar ultimele maxEvents evenimente
  const recentEvents = events.slice(-maxEvents);

  /**
   * FormateazƒÉ timestamp √Æn format [HH:MM:SS]
   */
  const formatTimestamp = (timestamp) => {
    try {
      const date = new Date(timestamp);
      const hours = String(date.getHours()).padStart(2, '0');
      const minutes = String(date.getMinutes()).padStart(2, '0');
      const seconds = String(date.getSeconds()).padStart(2, '0');
      return `[${hours}:${minutes}:${seconds}]`;
    } catch (error) {
      return '[--:--:--]';
    }
  };

  /**
   * DeterminƒÉ culoarea evenimentului
   * - Ro»ôu: fr√¢nare, danger, collision
   * - Galben: warning, cedare, yielding
   * - Verde: normal, success, collision_avoided
   * - Albastru: v2x_message, decision
   */
  const getEventColor = (event) => {
    const type = event.type?.toLowerCase() || '';
    const message = event.message?.toLowerCase() || '';

    // RO»òU - Fr√¢nare, Pericol
    if (
      type.includes('braking') ||
      type.includes('danger') ||
      type.includes('collision') ||
      message.includes('fr√¢neazƒÉ') ||
      message.includes('franeazƒÉ') ||
      message.includes('pericol')
    ) {
      return '#EF4444'; // Ro»ôu
    }

    // GALBEN - Cedare, Avertizare
    if (
      type.includes('warning') ||
      type.includes('yielding') ||
      message.includes('cedeazƒÉ') ||
      message.includes('cedeaza') ||
      message.includes('avertiz')
    ) {
      return '#FBBF24'; // Galben
    }

    // VERDE - Normal, Success
    if (
      type.includes('normal') ||
      type.includes('success') ||
      type.includes('avoided') ||
      message.includes('evitat') ||
      message.includes('success')
    ) {
      return '#22C55E'; // Verde
    }

    // ALBASTRU - V2X, Decizii
    if (
      type.includes('v2x') ||
      type.includes('message') ||
      type.includes('decision')
    ) {
      return '#3B82F6'; // Albastru
    }

    // Default: Gri
    return '#9CA3AF';
  };

  /**
   * Ob»õine icon pentru tip eveniment
   */
  const getEventIcon = (event) => {
    const type = event.type?.toLowerCase() || '';

    if (type.includes('braking') || type.includes('danger')) return 'üö®';
    if (type.includes('warning') || type.includes('yielding')) return '‚ö†Ô∏è';
    if (type.includes('avoided') || type.includes('success')) return '‚úÖ';
    if (type.includes('v2x') || type.includes('message')) return 'üì°';
    if (type.includes('decision')) return 'ü§ñ';
    if (type.includes('collision')) return 'üí•';

    return 'üìã';
  };

  /**
   * FormateazƒÉ mesajul evenimentului √Æn format cerut
   * Format: '[12:34:05] Agent B: FR√ÇNEAZƒÇ ‚Äî TTC = 1.8s'
   */
  const formatEventMessage = (event) => {
    const vehicleId = event.vehicleId || event.details?.vehicleId || '';
    const message = event.message || '';
    const ttc = event.details?.ttc || event.ttc;

    // Construie»ôte mesajul
    let formattedMessage = message;

    // AdaugƒÉ Agent ID dacƒÉ existƒÉ
    if (vehicleId && !message.includes('Agent') && !message.includes('Vehicul')) {
      formattedMessage = `Agent ${vehicleId}: ${message}`;
    }

    // AdaugƒÉ TTC dacƒÉ existƒÉ
    if (ttc && !message.includes('TTC')) {
      formattedMessage += ` ‚Äî TTC = ${typeof ttc === 'number' ? ttc.toFixed(1) : ttc}s`;
    }

    return formattedMessage;
  };

  return (
    <div style={styles.container}>
      {/* Header */}
      <div style={styles.header}>
        <h3 style={styles.title}>üìã Event Log - Decizii Timp Real</h3>
        <div style={styles.headerControls}>
          <span style={styles.eventCount}>
            {recentEvents.length} / {maxEvents} evenimente
          </span>
          <button
            onClick={() => setAutoScroll(!autoScroll)}
            style={{
              ...styles.autoScrollButton,
              backgroundColor: autoScroll ? '#22C55E' : '#6B7280',
            }}
            title={autoScroll ? 'Auto-scroll ON' : 'Auto-scroll OFF'}
          >
            {autoScroll ? 'üîΩ Auto' : '‚è∏Ô∏è Manual'}
          </button>
        </div>
      </div>

      {/* Legend */}
      <div style={styles.legend}>
        <div style={styles.legendItem}>
          <span style={{...styles.legendDot, backgroundColor: '#EF4444'}}></span>
          <span style={styles.legendText}>Fr√¢nare</span>
        </div>
        <div style={styles.legendItem}>
          <span style={{...styles.legendDot, backgroundColor: '#FBBF24'}}></span>
          <span style={styles.legendText}>Cedare</span>
        </div>
        <div style={styles.legendItem}>
          <span style={{...styles.legendDot, backgroundColor: '#22C55E'}}></span>
          <span style={styles.legendText}>Normal</span>
        </div>
        <div style={styles.legendItem}>
          <span style={{...styles.legendDot, backgroundColor: '#3B82F6'}}></span>
          <span style={styles.legendText}>V2X</span>
        </div>
      </div>

      {/* Event List */}
      <div style={styles.eventList}>
        {recentEvents.length === 0 ? (
          <div style={styles.emptyState}>
            <p style={styles.emptyText}>üì≠ Nu existƒÉ evenimente √ÆncƒÉ</p>
            <p style={styles.emptySubtext}>
              ApasƒÉ START pentru a √Æncepe simularea
            </p>
          </div>
        ) : (
          <>
            {recentEvents.map((event, index) => {
              const color = getEventColor(event);
              const icon = getEventIcon(event);
              const timestamp = formatTimestamp(event.timestamp);
              const message = formatEventMessage(event);

              return (
                <div
                  key={`${event.timestamp}-${index}`}
                  style={{
                    ...styles.eventItem,
                    borderLeftColor: color,
                    animation: 'slideIn 0.3s ease-out',
                  }}
                >
                  {/* Timestamp */}
                  <span style={styles.timestamp}>{timestamp}</span>

                  {/* Icon */}
                  <span style={styles.icon}>{icon}</span>

                  {/* Message */}
                  <span style={{...styles.message, color: color}}>
                    {message}
                  </span>
                </div>
              );
            })}

            {/* Scroll anchor */}
            <div ref={logEndRef} />
          </>
        )}
      </div>

      {/* Live Indicator */}
      <div style={styles.liveIndicator}>
        <div style={styles.liveDot}></div>
        <span style={styles.liveText}>
          LIVE - Sistem ruleazƒÉ √Æn timp real
        </span>
      </div>
    </div>
  );
};

